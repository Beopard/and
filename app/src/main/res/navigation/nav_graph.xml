<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/deliveryListFragment">

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.anonymousboard.ui.DetailFragment"
        android:label="detail_fragment"
        tools:layout="@layout/detail_fragment" >
        <action
            android:id="@+id/action_detailFragment_to_editFragment"
            app:destination="@id/editFragment" />
    </fragment>
    <fragment
        android:id="@+id/editFragment"
        android:name="com.example.anonymousboard.ui.EditFragment"
        android:label="edit_fragment"
        tools:layout="@layout/edit_fragment" />
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.anonymousboard.ui.MainFragment"
        android:label="main_fragment"
        tools:layout="@layout/main_fragment" >
        <action
            android:id="@+id/action_mainFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_mainFragment_to_writeFragment"
            app:destination="@id/writeFragment" />
    </fragment>
    <fragment
        android:id="@+id/writeFragment"
        android:name="com.example.anonymousboard.ui.WriteFragment"
        android:label="write_fragment"
        tools:layout="@layout/write_fragment" />
    <fragment
        android:id="@+id/joinFragment"
        android:name="com.example.anonymousboard.ui.JoinFragment"
        android:label="fragment_join"
        tools:layout="@layout/fragment_join" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.anonymousboard.ui.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
        <action
            android:id="@+id/action_loginFragment_to_joinFragment"
            app:destination="@id/joinFragment" />
    </fragment>
    <fragment
        android:id="@+id/deliveryListFragment"
        android:name="com.example.anonymousboard.ui.DeliveryListFragment"
        android:label="fragment_delivery_list"
        tools:layout="@layout/fragment_delivery_list" >
        <action
            android:id="@+id/action_deliveryListFragment_to_deliveryDetailFragment"
            app:destination="@id/deliveryDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/mypageFragment"
        android:name="com.example.anonymousboard.ui.MypageFragment"
        android:label="fragment_mypage"
        tools:layout="@layout/fragment_mypage" />
    <fragment
        android:id="@+id/deliveryDetailFragment"
        android:name="com.example.anonymousboard.ui.DeliveryDetailFragment"
        android:label="fragment_delivery_detail"
        tools:layout="@layout/fragment_delivery_detail" />
</navigation>